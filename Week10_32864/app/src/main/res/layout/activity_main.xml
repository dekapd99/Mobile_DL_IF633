<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/judulHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Week 10 Background Process"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Tutorial 1"
        android:textSize="10dp"
        android:id="@+id/tutorial1"
        app:layout_constraintTop_toBottomOf="@+id/judulHome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Tutorial 2"
        android:textSize="10dp"
        android:id="@+id/tutorial2"
        app:layout_constraintTop_toBottomOf="@+id/tutorial1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Tutorial 3"
        android:textSize="10dp"
        android:id="@+id/tutorial3"
        app:layout_constraintTop_toBottomOf="@+id/tutorial2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>